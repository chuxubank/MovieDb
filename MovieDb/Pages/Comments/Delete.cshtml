@page
@model MovieDb.Pages.Comments.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Comment.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comment.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Comment.Movie)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comment.Movie.Title)
        </dd>
        @if (User.IsInRole(Constants.MovieAdministratorsRole) || User.IsInRole(Constants.MovieManagersRole))
        {

            <dt>
                @Html.DisplayNameFor(model => model.Comment.User)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Comment.User.UserName)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Comment.Rating)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comment.Rating)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Comment.Content)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comment.Content)
        </dd>

    </dl>

    <form method="post">
        <input type="hidden" asp-for="Comment.ID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
